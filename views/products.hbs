<button id="insert_product_btn">+ New Product</button>

<!-- INSERT -->
<section id="insert_product_form" class="hidden_form">
    <h2>Add New Product</h2>
    <form action="/add-product" method="POST">
        <label for="productProductName">Product Name:</label>
        <input
        type="text"
        id="productProductName"
        name="productProductName"
        maxlength="225"
        required
        />
        <label for="productUnitPrice">Unit Price:</label>
        <input
        type="number"
        id="productUnitPrice"
        name="productUnitPrice"
        required
        />
        <label for="productCategoryID">Category ID:</label>
        <input
        type="text"
        id="productCategoryID"
        name="productCategoryID"
        maxlength="225"
        required
        />
      
        <button type="submit">Submit</button>
        <button type="button" id="insert_product_cancel">Cancel</button>
    </form>
</section>

<!-- UPDATE -->
<section id="update_product_form" class="hidden_form">
    <h2>Update Product</h2>
    <form action="/update-product" method="POST">
      <label for="updateProductID">ID:</label>
      <input
        type="text"
        id="updateProductID"
        name="updateProductID"
        readonly
      />
      <label for="updateProductProductName">Product Name:</label>
     <input
        type="text"
        id="updateProductProductName"
        name="updateProductProductName"
        maxlength="225"
        required
     />
        <label for="updateProductUnitPrice">Unit Price:</label>
        <input
        type="number"
        id="updateProductUnitPrice"
        name="updateProductUnitPrice"
        required
     />
        
        <label for="updateProductCategoryID">Category ID:</label>
          <input
          type="text"
          id="updateProductCategoryID"
          name="updateProductCategoryID"
          maxlength="225"
          placeholder="Enter category ID if applicable"
      />
      <button type="submit">Update</button>
      <button type="button" id="update_product_cancel">Cancel</button>
    </form>
  </section>
  
<!-- SELECT -->
<table id="products-table">

    <thead>

        {{!-- Table headers --}}
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Category ID</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr 
        data-value={{this.productID}} 
        data-product-name="{{this.productName}}" 
        data-unit-price="{{this.unitPrice}}" 
        data-categoryID={{this.categoryID}}

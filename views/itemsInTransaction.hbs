<button id="insert_itemsInTransaction_btn">+ New Transaction Detail</button>

<!-- INSERT -->
<section id="insert_itemsInTransaction_form" class="hidden_form">
    <h2>Add New Transaction Detail</h2>
    <form action="/add-itemsInTransaction" method="POST">
        <label for="transactionID">Transaction ID:</label>
        <input type="text" id="transactionID" name="transactionID" maxlength="225" required/>
    
    
        <label for="productName">Item Name:</label>
        <input type="text" id="productName" name="productName" maxlength="225" required/>
        

        <label for="quantity">Item Quantity:</label>
        <input type="number" id="quantity" name="quantity" maxlength="225" required/>

        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" maxlength="225" required/>
        <button type="submit">Submit</button>

        <button type="button" id="insert_itemsInTransaction_cancel">Cancel</button>
    </form>
</section>

<!-- UPDATE -->
<section id="update_itemsInTransaction_form" class="hidden_form">
    <h2>Update Transaction Detail</h2>
    <form action="/update-transactionDetail" method="POST">

      <!-- Item ID (remains the same) -->
      <label for="updateItemID">Item ID:</label>
      <input type="text" id="updateItemID" name="updateItemID" readonly />

      <!-- Transaction ID (remains the same) -->
      <label for="updateTransactionID">Transaction ID:</label>
      <input type="text" id="updateTransactionID" name="updateTransactionID" readonly />

      <!-- Product Name selecting from the products -->
      <label for="updateProductName">Item Name:</label>
      <input type="text" id="updateProductName" name="updateProductName" maxlength="225" required/>

      <!-- Employee ID (replaces 'Employee Email', now using employeeID instead of email) -->
     <label for="updateQuantity">Item Quantity:</label>
        <input type="number" id="updateQuantity" name="updateQuantity" maxlength="225" required/>

    <label for="updateAmount">Item Price:</label>
    <input type="updateAmount" id="updateAmount" name="updateAmount" maxlength="225" required/>

      <!-- Update Button -->
      <button type="submit">Update</button>
      <button type="button" id="update_itemsInTansaction_cancel">Cancel</button>
    </form>
</section>

  
<!-- SELECT -->
<table id="itemsInTransaction-table">

    <thead>

        {{!-- Table headers --}}
        <tr>
            <th>Item ID</th>
            <th>TransactionID</th>
            <th>Item Name</th>
            <th>Item Quantity</th>
            <th>Amount</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr 
        data-value={{this.itemID}}
        data-transaction-id ={{this.transactionID}}
        data-product-name={{this.productName}} 
        data-quantity="{{this.quantity}}" 
        data-amount={{this.amount}}
        >
            <td>{{this.itemID}}</td>
            <td>{{this.transactionID}}</td>
            <td>{{this.productName}}</td>

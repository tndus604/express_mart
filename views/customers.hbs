            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
{{!--Update: shifted the table structure to show customer name and customer type --}}
        {{#each data}}
        <tr 
        data-value={{this.customerID}} 
        data-first-name="{{this.firstName}}" 

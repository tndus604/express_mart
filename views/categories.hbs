<button id="insert_category_btn">+ New Category</button>

<!-- INSERT -->
<section id="insert_category_form" class="hidden_form">
    <h2>Add New Category</h2>
    <form action="/add-category" method="POST">
        <label for="categoryName">Category Name:</label>
        <input
        type="text"
        id="categoryName"
        name="categoryName"
        maxlength="225"
        required
        />
        <button type="submit">Submit</button>
        <button type="button" id="insert_category_cancel">Cancel</button>
    </form>
</section>

<!-- UPDATE -->
<section id="update_category_form" class="hidden_form">
    <h2>Update Category</h2>
    <p style="font-size: 1em; color: #333; margin-bottom: 20px;">
        You can access an UPDATE by clicking a specific "âœŽ" from the below table.
    </p>

    <form action="/update-category" method="POST">
      <label for="updateCategoryID">ID:</label>
      <input
        type="text"
        id="updateCategoryID"
        name="updateCategoryID"
        readonly
      />
      <label for="updateCategoryName">Category Name:</label> {{!-- an update based on peer review 5--}}
     <input
        type="text"
        id="updateCategoryName"
        name="updateCategoryName"
        maxlength="225"
        required
     />
       
      <button type="submit">Update</button>
      <button type="button" id="update_category_cancel">Cancel</button>
    </form>
  </section>
  
<!-- SELECT -->
<table id="categories-table">

    <thead>

        {{!-- Table headers --}}
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr 
        data-value={{this.categoryID}} 
        data-category-name="{{this.categoryName}}" 
        >
            <td>{{this.categoryID}}</td>
            <td>{{this.categoryName}}</td>
            <td class="edit_icon">âœŽ</td>

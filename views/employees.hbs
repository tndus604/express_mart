<button id="insert_employee_btn">+ New Employee</button>

<!-- INSERT -->
<section id="insert_employee_form" class="hidden_form">
    <h2>Add New Employee</h2>
    <form action="/add-employee" method="POST">
        <label for="employeeFirstName">First Name:</label>
        <input
        type="text"
        id="employeeFirstName"
        name="employeeFirstName"
        maxlength="225"
        required
        />
        <label for="employeeLastName">Last Name:</label>
        <input
        type="text"
        id="employeeLastName"
        name="employeeLastName"
        maxlength="225"
        required
        />
        <label for="employeeEmail">Email:</label>
        <input
        type="email"
        id="employeeEmail"
        name="employeeEmail"
        maxlength="225"
        required
        />
        <label for="employeePosition">Position:</label>
        <input
        type="text"
        id="employeePosition"
        name="employeePosition"
        maxlength="225"
        required
        />
        <label for="employeeCustomerID">Customer ID:</label>
        <input
        type="text"
        id="employeeCustomerID"
        name="employeeCustomerID"
        maxlength="225"
        placeholder="Enter customer ID if applicable"
        />
        <button type="submit">Submit</button>
        <button type="button" id="insert_employee_cancel">Cancel</button>
    </form>
</section>

<!-- UPDATE -->
<section id="update_employee_form" class="hidden_form">
    <h2>Update Employee</h2>
    <form action="/update-employee" method="POST">
      <label for="updateEmployeeID">ID:</label>
      <input
        type="text"
        id="updateEmployeeID"
        name="updateEmployeeID"
        readonly
      />
      <label for="updateEmployeeFirstName">First Name:</label>
     <input
        type="text"
        id="updateEmployeeFirstName"
        name="updateEmployeeFirstName"
        maxlength="225"
        required
     />
        <label for="updateEmployeeLastName">Last Name:</label>
        <input
        type="text"
        id="updateEmployeeLastName"
        name="updateEmployeeLastName"
        maxlength="225"
        required
     />
        <label for="updateEmployeeEmail">Email:</label>
        <input
        type="email"
        id="updateEmployeeEmail"
        name="updateEmployeeEmail"
        maxlength="225"
        required
      />
        <label for="updateEmployeePosition">Position:</label>
          <input
          type="text"
          id="updateEmployeePosition"
          name="updateEmployeePosition"
          maxlength="225"
          required
        />
        <label for="updateEmployeeCustomerID">Customer ID:</label>
          <input
          type="text"
          id="updateEmployeeCustomerID"
          name="updateEmployeeCustomerID"
          maxlength="225"
          placeholder="Enter customer ID if applicable"
      />
      <button type="submit">Update</button>
      <button type="button" id="update_employee_cancel">Cancel</button>
    </form>
  </section>
  
<!-- SELECT -->
<table id="employees-table">

    <thead>

        {{!-- Table headers --}}
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Position</th>
            <th>Customer ID</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        {{#each data}}
        <tr 
        data-value={{this.employeeID}} 
        data-first-name="{{this.firstName}}" 
        data-last-name="{{this.lastName}}" 
        data-email={{this.email}}
        data-position={{this.position}}
        data-customerID={{this.customerID}}
        >
            <td>{{this.employeeID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.position}}</td>
            <td>{{this.customerID}}</td>
